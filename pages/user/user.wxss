.user{
  background: #E54847;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}
.user_img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}
.user_name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}
.user_btn{
  border: 2px solid #ccc;
}